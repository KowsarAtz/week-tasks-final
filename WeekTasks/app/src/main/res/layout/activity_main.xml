<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/tasky_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="68dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="14dp"
                android:paddingLeft="14dp">

                <Button
                    android:tag="0"
                    android:id="@+id/day_sat"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Sat"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:tag="1"
                    android:id="@+id/day_sun"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Sun"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:tag="2"
                    android:id="@+id/day_mon"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Mon"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:tag="3"
                    android:id="@+id/day_tue"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Tue"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:tag="4"
                    android:id="@+id/day_wed"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Wed"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:tag="5"
                    android:id="@+id/day_thu"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Thu"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    android:layout_marginRight="8dp"
                    />

                <Button
                    android:tag="6"
                    android:id="@+id/day_fri"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="19sp"
                    android:text="Fri"
                    android:textAllCaps="false"
                    app:fontFamily="@font/londrina_solid_regular"
                    android:background="@drawable/day_button_unselected"
                    />

            </LinearLayout>

        </HorizontalScrollView>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/decide_password_dialoge"
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:background="@drawable/dialoge_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Are you sure?"
                    android:padding="20dp"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/tasky_dark_blue"/>

                <LinearLayout
                    android:id="@+id/ask_delete_dialog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/ask_delete_dialog_cancel_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="CANCEL"
                        android:textSize="20sp"
                        app:fontFamily="@font/londrina_solid_regular"
                        android:textColor="@color/white"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <Button
                        android:id="@+id/ask_delete_dialog_yes_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="YES, DELETE !"
                        android:textSize="20sp"
                        app:fontFamily="@font/londrina_solid_regular"
                        android:textColor="@color/white"
                        style="@style/Widget.AppCompat.Button.Borderless"/>
                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/day_activities_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/options_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:layout_marginTop="60dp"
        android:layout_gravity="top|right"
        >

        <TextView
            android:id="@+id/loggedin_usernamename_tw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KowsarAtazadeh"
            android:background="@color/tasky_dark"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:fontFamily="@font/londrina_solid_regular"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/loggedin_name_tw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kowsar Atazadeh"
            android:background="@color/tasky_dark"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:fontFamily="@font/londrina_solid_regular"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/loggedin_email_tw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kowsar.Atazadeh@gmail.com"
            android:background="@color/tasky_dark"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:fontFamily="@font/londrina_solid_regular"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="@color/tasky_dark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="19sp"
            android:textAllCaps="false"
            app:fontFamily="@font/londrina_solid_regular"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/increment_day_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test / tomorrow"
            android:background="@color/tasky_dark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="19sp"
            android:textAllCaps="false"
            app:fontFamily="@font/londrina_solid_regular"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:background="@color/tasky_dark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="19sp"
            android:textAllCaps="false"
            app:fontFamily="@font/londrina_solid_regular"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/tasky_dark">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_calendar"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"/>

        <ImageButton
            android:id="@+id/options_menu_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_menu"
            android:background="@null"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="14dp"/>

    </FrameLayout>


</FrameLayout>